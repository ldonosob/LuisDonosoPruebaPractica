@model TestLuisDonoso.Models.Tarea
@{
    ViewBag.Title = "Creación Tarea";
}

<h2>Crear Tarea</h2>

@using (Html.BeginForm("Create", "Tarea", FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label for="Nombre">Nombre</label>
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @autocomplete = "off", @type = "text", @class = "form-control", @maxlength = "50" } })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="UsuarioID">Usuario</label>
                @Html.DropDownListFor(model => model.UsuarioID, new SelectList(ViewBag.listadoUsuarios, "Value", "Text"), new { @class = "form-control", required = "required" })
            </div>
        </div>
    </div>
    <div class="row">        
        <div class="col-lg-6">
            <div class="form-group">
                <label for="EstadoID">Estado</label>
                @Html.DropDownList("EstadoID", new SelectList(ViewBag.listEstado, "Value", "Text"), new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="Descripcion">Descripción</label>
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @autocomplete = "off", @type = "text", @class = "form-control", @maxlength = "500" } })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <input type="submit" value="Guardar" class="btn btn-lg btn-success float-right" />
        </div>
    </div>
}